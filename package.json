  "private": true,
  "description": "Open-source incident management platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:dev": "npm run start:dev -w @openalert/api",
    "build": "npm run build -w @openalert/api",
    "test": "npm run test -w @openalert/api",
