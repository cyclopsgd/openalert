# ====================
# Test Environment Configuration
# ====================
NODE_ENV=test
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# Test Database (PostgreSQL)
# Use separate database for tests
# ====================
DATABASE_URL=postgresql://openalert:openalert_dev@localhost:5432/openalert_test

# ====================
# Redis (same instance, different key prefix)
# ====================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Cache Configuration
CACHE_ENABLED=true
REDIS_CACHE_TTL_DEFAULT=60

# ====================
# JWT Configuration
# ====================
JWT_SECRET=test-jwt-secret-key-do-not-use-in-production
COOKIE_SECRET=test-cookie-secret-key

# ====================
# Azure AD (Optional for tests)
# ====================
AZURE_AD_TENANT_ID=test-tenant-id
AZURE_AD_CLIENT_ID=test-client-id
AZURE_AD_CLIENT_SECRET=test-client-secret

# ====================
# Email (Mock for tests)
# ====================
SENDGRID_API_KEY=SG.test-key
SENDGRID_FROM_EMAIL=test@openalert.test
SENDGRID_FROM_NAME=OpenAlert Test

# ====================
# Feature Flags
# ====================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
